{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false,
    "module": "NodeNext",
    "paths": {
      "app/*": ["./app/*"],
    },
  },
  "include": [
    "./assets/**/*",
    "./app/**/*"
  ],
}