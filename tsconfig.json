{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false,
    "module": "NodeNext",
    "paths": {
      "App/*": ["./app/*"],
      "Components/*": ["./app/components/*"],
      "Modules/*": ["./app/modules/*"]
    }
  },
  "include": ["./assets/**/*", "./app/**/*"]
}
